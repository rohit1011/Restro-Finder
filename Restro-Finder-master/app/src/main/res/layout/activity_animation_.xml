<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C00ff00"
    tools:context="com.wa_v_er.demo.Animation_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

      >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/location"
            android:layout_gravity="center"
            android:src="@mipmap/location"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESTRO FINDER"
            android:textColor="#000"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/restro"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" &quot; Find the NearBy Resturant &quot;"
            android:textColor="#a901e1"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/quote"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@mipmap/table"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
